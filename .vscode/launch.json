{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Client",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/sample-client",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["start"],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      },
      {
        "name": "Run Server",
        "type": "node",
        "request": "launch",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/sample-server/server.ts",
        "console": "integratedTerminal"
      },
    ]
  }